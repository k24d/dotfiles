export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EDITOR=vi
export HISTCONTROL=ignorespace

export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin

bindkey -e

# Homebrew
eval $(/opt/homebrew/bin/brew shellenv)

# direnv
eval "$(direnv hook zsh)"

source ~/.config/zsh/config.d/gcloud.sh
source ~/.config/zsh/config.d/node.sh
source ~/.config/zsh/config.d/podman.sh
source ~/.config/zsh/config.d/python.sh
source ~/.config/zsh/config.d/rust.sh
source ~/.config/zsh/config.d/starship.sh
